<?xml version="1.0" encoding="utf-8"?> 

<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:background="@android:color/transparent"
	android:padding="5.3dp"
	> 
	
	<ImageView 
	    android:id="@+id/image_notification" 
	    android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
		android:layout_centerVertical="true"
		android:layout_alignParentLeft="true"
        android:layout_marginRight="15dip" 
		android:src="@drawable/ic_launcher"
	/>
	
	<RelativeLayout
	    android:id="@+id/layout_right"
	    android:layout_width="40dip" 
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/notification_icon_margin_left"
		android:visibility="gone"
	 > 
        	<TextView
		    android:id="@+id/time_notification" 
		    android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:text="11:00"
			style="@style/NotificationText"
			 />
			<ImageView
		  	android:layout_width="18.6dip" 
			android:layout_height="18.6dip"
		    android:src="@drawable/notifycation_small_icon"
		    android:layout_marginTop="3dip"
		    android:layout_below="@id/time_notification"
		    android:layout_alignParentRight="true"
			/>
	</RelativeLayout> 

	<RelativeLayout
	   	android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@id/image_notification"
		android:layout_toLeftOf="@id/layout_right"
	>
	    
	<RelativeLayout  
	    android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
	 >
	 	<RelativeLayout
	 	    android:id="@+id/layout_title"
	 	    android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
		>
	       	<TextView 
		       	android:id="@+id/title_notification" 
			    android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:gravity="center"
				android:text="title"
				android:singleLine="true"
				android:ellipsize="end"
				style="@style/NotificationTitle"
			/>
	       	<TextView 
		       	android:id="@+id/title_notification_info" 
			    android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:gravity="center"
				android:layout_toRightOf="@id/title_notification"
				android:layout_marginLeft="2dip"
				android:textSize="18sp"
				android:textColor="@color/green_bg_text_color"
			/>
       	</RelativeLayout>
		<RelativeLayout
	    	android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_below="@id/layout_title"
			android:layout_alignLeft="@id/title_notification"
			android:layout_centerVertical="true"
		>
			<RelativeLayout
			    android:id="@+id/layout_image"
			    android:layout_width="wrap_content" 
				android:layout_height="wrap_content"				
			>
				
				<ImageView
				    android:id="@+id/image_icon1"
				    android:layout_width="@dimen/notication_icon_width"
				    android:layout_height="@dimen/notication_icon_height"
				    android:layout_centerVertical="true"
				    android:src="@drawable/default_app_icon"
				    android:visibility="gone"
				/>
				<ImageView
				    android:id="@+id/image_icon2"
				    android:layout_width="@dimen/notication_icon_width"
				    android:layout_height="@dimen/notication_icon_height"
				    android:layout_centerVertical="true"
				    android:layout_marginLeft="@dimen/notication_icon_margin"
				    android:layout_toRightOf="@id/image_icon1"
				    android:src="@drawable/default_app_icon"
				    android:visibility="gone"
				/>
				<ImageView
				    android:id="@+id/image_icon3"
				    android:layout_width="@dimen/notication_icon_width"
				    android:layout_height="@dimen/notication_icon_height"
				    android:layout_centerVertical="true"
				    android:layout_marginLeft="@dimen/notication_icon_margin"
				    android:layout_toRightOf="@id/image_icon2"
				    android:src="@drawable/default_app_icon"
				    android:visibility="gone"
				/>
				<ImageView
				    android:id="@+id/image_icon4"
				    android:layout_width="@dimen/notication_icon_width"
				    android:layout_height="@dimen/notication_icon_height"
				    android:layout_centerVertical="true"
				    android:layout_marginLeft="@dimen/notication_icon_margin"
				    android:layout_toRightOf="@id/image_icon3"
				    android:src="@drawable/default_app_icon"
				    android:visibility="gone"
				/>
		 </RelativeLayout>
	 		<TextView
		    android:id="@+id/text_icon_content"
		   	android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dip"
			android:layout_centerVertical="true"
			android:text="等有更新"
			android:layout_toRightOf="@id/layout_image"
			android:visibility="gone"
			/>
		</RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout> 
