<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
	
    <TextView android:id="@+id/association_keyword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/association_keyword_height"
        android:paddingLeft="@dimen/list_item_search_association_margin_left"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/list_item_search_association_keyword_text_size"
        android:textColor="@color/list_item_search_association_keyword_text_color" />
    
  	<View android:id="@+id/bottom_divider"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/list_view_divider_height"
	        android:layout_alignParentBottom="true"
	        android:background="@color/common_divider_color" />
    
</RelativeLayout>