<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/common_list_marginx"
    android:paddingRight="@dimen/common_list_marginx"
    android:background="#ffffff"
    >
    
        <View android:id="@+id/desciprtion_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_divider_height"
        android:layout_below="@id/button_detail_comment"
        android:layout_marginTop="2dip"
        android:background="#cccccc" />
    
    	<RelativeLayout    
    	    android:id="@+id/layout_item_head"
    	    android:layout_below="@id/desciprtion_divider"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_marginTop="10dip"
    		android:layout_marginLeft="8dip"
    		android:layout_marginRight="8dip"
        >
        	<TextView 
        	    android:id="@+id/text_title_version"
        	    android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:textColor="#aaaaaa"
        	    android:text="当前版本"
        	    android:textSize="@dimen/detail_desc_text_size"
        	/>
        	
	     	<com.appmall.market.widget.RankStarWidget
            android:id="@+id/star_average_value"
            android:layout_toRightOf="@id/text_title_version"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7.5dip"
            android:layout_width="@dimen/rank_star_widget_width"
            android:layout_height="@dimen/rank_star_widget_height"/>
	     	
	     	<TextView 
        	    android:id="@+id/text_title_user"
        	    android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_alignParentRight="true"  			
    			android:layout_centerVertical="true"
        	    android:textColor="#aaaaaa"
        	    android:textSize="@dimen/detail_desc_text_size"
        	    android:text="游客"
        	/>
        </RelativeLayout>
        
   		<TextView 
       	    android:id="@+id/text_user_comment"
       	    android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:layout_below="@id/layout_item_head"
       	    android:layout_marginTop="5dip"
       	    android:layout_marginBottom="5dip"
       	    android:layout_marginLeft="8dip"
    		android:layout_marginRight="8dip"
       	    android:textSize="@dimen/detail_desc_text_size"
       	    android:textColor="@color/common_item_title_text_color"
       	/>
   		
   		<RelativeLayout    
    	    android:id="@+id/layout_item_foot"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_below="@id/text_user_comment"
    		android:layout_marginRight="8dip"
        >
        	<TextView 
        	    android:id="@+id/text_foot_title"
        	    android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_centerVertical="true"
        	    android:textColor="#aaaaaa"
        	    android:layout_marginLeft="8dip"
        	    android:textSize="@dimen/detail_desc_text_size"
        	    android:text="机型:"
        	/>
	     	
	     	<TextView 
        	    android:id="@+id/text_foot_model"
        	    android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_toRightOf="@id/text_foot_title"
    			android:layout_centerVertical="true"
        	    android:textColor="#aaaaaa"
        	    android:textSize="@dimen/detail_desc_text_size"
        	/>
	     	
	     	<TextView
	     	    android:id="@+id/text_foot_updatetime"
        	    android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_alignParentRight="true"  			
    			android:layout_centerVertical="true"
        	    android:textColor="#aaaaaa"
        	    android:textSize="@dimen/detail_desc_text_size"
	     	/>
        </RelativeLayout>

    
</RelativeLayout>